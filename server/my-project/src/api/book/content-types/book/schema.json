{
  "kind": "collectionType",
  "collectionName": "books",
  "info": {
    "singularName": "book",
    "pluralName": "books",
    "displayName": "Book",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "chapters": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::chapter.chapter",
      "mappedBy": "book"
    },
    "title": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "pages": {
      "type": "integer"
    },
    "isbn": {
      "type": "string"
    },
    "language": {
      "type": "string"
    },
    "likes": {
      "type": "integer"
    },
    "view": {
      "type": "integer"
    },
    "cover_image": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "categories": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::category.category",
      "mappedBy": "books"
    },
    "authors": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::author.author",
      "mappedBy": "books"
    },
    "reading_histories": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::reading-history.reading-history",
      "mappedBy": "book"
    },
    "favorites": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::favorite.favorite",
      "mappedBy": "books"
    },
    "status": {
      "type": "string"
    }
  }
}
